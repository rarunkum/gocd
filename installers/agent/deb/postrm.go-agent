set -e

if [ "$1" = "purge" ] ; then
    update-rc.d go-agent remove >/dev/null || exit $?

    rm -fr /usr/share/go-agent
    rm -fr /var/lib/go-agent
    rm -fr /var/run/go-agent
    rm -fr /var/log/go-agent

    GO_AGENT_DEFAULTS=/etc/default/go-agent
    if [ -L $GO_AGENT_DEFAULTS ]; then
        rm $GO_AGENT_DEFAULTS
    fi
fi

