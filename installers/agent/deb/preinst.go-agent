set -e

if [ -x "/etc/init.d/go-agent" ]; then
    invoke-rc.d go-agent stop || true
fi

APP_NAME="'Go Agent'"

CRUISE_AGENT_STATUS=`dpkg --get-selections cruise-agent`

@shared_deb@
@shared@
@pre_post@

if [ $1 = "install" ]; then
    warn_about_existing_user_or_group_go

    if [ "$CRUISE_AGENT_STATUS" != '' ]; then
        rename_cruise_user_and_group_to_go
        echo "install_over_cruise" > $AGENT_INSTALL_STATUS_FILE
    fi

    create_user_go_if_none
    create_group_go_if_none
    ensure_go_user_belongs_to_go_group
fi

